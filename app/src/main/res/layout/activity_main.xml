<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:src="@drawable/logo_main_black_img"/>

        <Button
            android:id="@+id/main_make_moim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_base_main_btn"

            android:text="@string/main_make_moim"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            />

        <Button
            android:id="@+id/main_view_moim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_base_main_btn"
            android:layout_marginVertical="15dp"

            android:text="@string/main_view_moim"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            />

        <Button
            android:id="@+id/main_join_moim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_base_main_btn"

            android:text="@string/main_join_moim"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            />

        <Button
            android:id="@+id/main_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_base_main_btn"
            android:visibility="gone"

            android:text="@string/main_user_moim"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>