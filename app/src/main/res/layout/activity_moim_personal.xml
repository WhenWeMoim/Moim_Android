<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moim_personal_topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/moim_personal_complete_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="완료"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/moim_personal_load_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:text="불러오기"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/moim_personal_complete_btn"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginVertical="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/moim_personal_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_choice_like_btn"
            />

        <Button
            android:id="@+id/moim_personal_possible_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_choice_possible_btn"
            android:backgroundTint="@color/choice_possible"
            />

        <Button
            android:id="@+id/moim_personal_dislike_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_choice_dislike_btn"
            />

        <Button
            android:id="@+id/moim_personal_impossible_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_choice_impossible_btn"
            />

        <Button
            android:id="@+id/moim_personal_reset_btn"
            android:text="스케줄표 초기화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/moim_personal_schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/moim_personal_topbar_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.fragment.app.FragmentContainerView
            class="com.legends.moim.src.groupMoim.PersonalScheduleFragment"
            android:id="@+id/moim_personal_schedule_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/moim_personal_topbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>