<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/main_make_moim_btn"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:text="@string/main_make_moim"
            />

        <Button
            android:id="@+id/main_view_moim_btn"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:text="@string/main_view_moim"
            />

        <Button
            android:id="@+id/main_user_btn"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:text="@string/main_user"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>